{% extends "layout.html.twig" %}

{% block title %}OpenEquestrianClubManagement - Toutes les commandes{% endblock %}

{% block content %}
    <h1>Commandes</h1>
    
    <div class="add">
        <a href="{{ url('add-order') }}" class="btn btn-primary">
            <i class="icon-plus icon-white"></i>
            Ajouter une commande
        </a>
    </div>
    
    <h2>Liste des commandes</h2>
    
    <table class="table table-striped table-bordered listing">
        <thead>
            <tr>
                <th>NÂ° de commande</th>
                <th>Client</th>
                <th>Date de la commande</th>
                <th>Montant</th>
                <th>&Eacute;tat de la commande</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {% for order in orders %}
            <tr>
                <td>{{ order.numOrder }}</td>
                <td>{{ order.customer }}</td>
                <td>{{ order.date(null)|date }}</td>
                <td>{{ order.total|price }}</td>
                <td>{{ order.state|state }}</td>
                <td>
                    <a href="{{ url('edit-order', { 'id': order.id }) }}" class="btn btn-warning">
                        <i class="icon-pencil icon-white"></i>
                        Modifier
                    </a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}