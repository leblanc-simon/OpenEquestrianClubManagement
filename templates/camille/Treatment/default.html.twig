{% extends "layout.html.twig" %}

{% block title %}OpenEquestrianClubManagement - Types de soins{% endblock %}

{% block content %}
    <h1>Liste des types de soins</h1>
    
    <div class="search">
        
    </div>
    
    <div class="add">
        <a href="{{ url('add-treatment') }}" class="btn btn-primary">
            <i class="icon-plus icon-white"></i>
            Ajouter un type de soin
        </a>
    </div>
    
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Périodicité (en semaine)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {% for treatment in treatments %}
            <tr>
                <td>{{ treatment.name }}</td>
                <td>{{ treatment.periodicity }}</td>
                <td>
                    <a href="{{ url('edit-treatment', { 'slug': treatment.slug }) }}" class="btn btn-warning">
                        <i class="icon-pencil icon-white"></i>
                        Modifier
                    </a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}